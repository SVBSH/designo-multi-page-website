---
	// Font 
	import '@fontsource/jost';

	// CSS styles imports
	import "../styles/css-reset.scss";
	import "../styles/root.scss";
	import "../styles/global.scss";
	import "../styles/utils/utilities.scss";
	import "../styles/utils/colors.scss";

	// Components
	import Header from "@components/Header.astro";
	import Footer from "@components/Footer.astro";

	export interface Props {
		title: string;
		contactAdvertisement?: boolean
	}

	let { title, contactAdvertisement } = Astro.props;
	if (contactAdvertisement === undefined) {
		contactAdvertisement = true;
	}
---

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
	<link rel="apple-touch-icon" href="/favicon-32x32.png">
	<slot name="head"/>
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
</head>

<body class="">
	<Header />
	<main class="main">
		<slot />
	</main>
	<Footer contactAdvertisement={contactAdvertisement} />

</body>

</html>
<style is:global>
	:root {}

	html {}

	code {}
</style>