---
  import BaseLayout from "../layouts/BaseLayout.astro";
  import PageSpecialisationHeroSection from "../components/pageSpecialisationHeroSection.astro";
  const pageTitle = "Web Design"

  const webPages = [
    {
      title: "Express",
      description: "A multi-carrier shipping website for ecommerce businesses",
      image: {
        path: "/assets/web-design/desktop/image-express.jpg",
        description: ""
      },
      link: "https://svbsh.github.io/web-pages/junior/blogr-landing-page-main/"
    },
    {
      title: "Transfer",
      description: "Site for low-cost money transfers and sending money within seconds",
      image: {
        path: "/assets/web-design/desktop/image-transfer.jpg",
        description: ""
      },
      link: "https://svbsh.github.io/web-pages/junior/blogr-landing-page-main/"
    },
    {
      title: "Photon",
      description: "A state-of-the-art music player with high-resolution audio and DSP effects",
      image: {
        path: "/assets/web-design/desktop/image-photon.jpg",
        description: ""
      },
      link: "https://svbsh.github.io/web-pages/junior/blogr-landing-page-main/"
    },
    {
      title: "Builder",
      description: "Connects users with local contractors based on their location",
      image: {
        path: "/assets/web-design/desktop/image-builder.jpg",
        description: ""
      },
      link: "https://svbsh.github.io/web-pages/junior/blogr-landing-page-main/"
    },
    {
      title: "Blogr",
      description: "Blogr is a platform for creating an online blog or publication",
      image: {
        path: "/assets/web-design/desktop/image-blogr.jpg",
        description: ""
      },
      link: "https://svbsh.github.io/web-pages/junior/blogr-landing-page-main/"
    },
    {
      title: "Camp",
      description: "Get expert training in coding, data, design, and digital marketing",
      image: {
        path: "/assets/web-design/desktop/image-camp.jpg",
        description: ""
      },
      link: "https://svbsh.github.io/web-pages/junior/blogr-landing-page-main/"
    },
  ]
---

<BaseLayout title={pageTitle}>

  <PageSpecialisationHeroSection pageTitle={pageTitle}
    description="We build websites that serve as powerful marketing tools and bring memorable brand experiences." />
  <div class="wrapper">

    {(webPages.length > 0) &&
    <ul class="web-page-list">
      {webPages.map(webpage => 
      <>
        <li class="web-page__item">
          <a href={webpage.link} class="web-page__link">
            <figure class="web-page__figure">
              <img class="web-page__img" src={webpage.image.path} alt={webpage.image.description}>
              <figcaption class="web-page__info | flex flex-col text-center">
                <h3 class="text-uppercase">{webpage.title}</h3>
                <p class="web-page__description">{webpage.description}</p>
              </figcaption>
            </figure>
          </a>
        </li>
      </>)}
    </ul>}
    <!-- App Design
    View Projects
    Graphic Design
    View Projects -->
  </div>
</BaseLayout>

<style lang="scss">
  .web-page-list {
    display: grid;
    gap: 2rem;
    margin-block: 3rem;
  }

  .web-page {
    --radius-size: 12px;

    &:where(&__item, &__img) {}

    &__link {
      display: block;
      text-decoration: none;
    }

    &__figure {
      display: grid;
      // grid-auto-flow: column;
      // grid-template-rows: minmax(300px, 400px) 1fr;;
      grid-row: 1;
    }

    &__img {
      --radius-size: 12px;
      display: block;
      height: 100%;
      max-height: 328px;
      object-fit: cover;
      min-width: 100%;
      border-top-left-radius: var(--radius-size);
      border-top-right-radius: var(--radius-size);
    }

    &__info {
      --radius-size: 12px;

      padding-block: 3rem;
      padding-inline: 2rem;
      grid-row: 2;

      background-color: hsla(14, 76%, 97%, 1);
      border-bottom-left-radius: var(--radius-size);
      border-bottom-right-radius: var(--radius-size);

      &>h3 {
        color: var(--color-primary-peach);
      }

      &>p {
        color: var(--color-primary-black);
        max-width: 30ch;
        margin: auto;
      }
    }
  }
</style>